<div class="col-sm-12 col-xs-12 col-md-12 list_questions">

<p id="notice"><%= notice %></p>
  <div class=new_quest>
    <%= link_to 'Nova Pergunta', new_question_path %>
  </div>

  <div class=nu_title>
    <h1>Quest√µes</h1>
  </div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Post time</th>
      <th>Last edit</th>
      <th>Tags</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= question.content %></td>
        <td><%= question.created_at %></td>
        <td><%= question.updated_at %></td>
        <td><%= question.tags %></td>
        <td><%= question.user.name %></td>
        <td><%= link_to 'Mostar', question %>
          <%= link_to 'Editar', edit_question_path(question) %>
          <%= link_to 'Excluir', question, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>